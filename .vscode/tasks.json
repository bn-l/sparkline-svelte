{
    "version": "2.0.0",
    "tasks": [
        {
			"label": "run",
			"type": "npm",
			"script": "run:file -- ${file}",
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": true,
				"clear": true,
				"echo": false,
				"showReuseMessage": false
			}
		},
    ]
}